<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<TextView android:background="#0000ff"
	    android:id="@+id/wordselectphase_textview01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="숙어"
	    android:gravity="center"
	    android:textSize="30dp" >
		</TextView>

	<ListView
	    android:id="@+id/wordselectphase_listview01"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight=".70"
	    android:background="#FFFFFF" 
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@drawable/list_item_selectorphase"
	    >
	</ListView>
	<TextView android:id="@+id/wordselectphase_textview02"
	    android:background="#0000ff"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:text="숙어를 선택해 주세요."
		android:gravity="center"
		android:textSize="30dp"
		></TextView>
	<LinearLayout
		android:orientation="horizontal" android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="10dip"
		>
		<ImageButton
		    android:id="@+id/wordselectphase_imagebutton01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#000000"
		    android:src="@drawable/start1" >
		</ImageButton>
		<ImageButton 
		    android:id="@+id/wordselectphase_imagebutton02" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:src="@drawable/question1"
			android:background="#000000"
			android:layout_marginLeft="10dip"></ImageButton>
	</LinearLayout>
</LinearLayout>
