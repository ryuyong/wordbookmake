<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="240dip"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/plusaddword_frame1"
    android:gravity="center"
    android:paddingTop="0dip"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="46dip"
        android:gravity="right"
        android:layout_gravity="right"
        android:orientation="horizontal" >
       <ImageView
           android:id="@+id/plusaddword_imageview02"
           android:layout_width="40dip"
           android:layout_height="40dip"
           android:layout_marginLeft="2dip"
           android:layout_marginRight="0dip"
           android:background="@drawable/plusaddword_close" />
     </LinearLayout>

     <LinearLayout
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
			    android:id="@+id/plusaddword_textview01"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text=" 원    어 :"
			    android:textColor="#000000" >

			</TextView>
			<EditText android:text="" android:id="@+id/plusaddword_edittext01"
				android:layout_width="wrap_content" android:layout_height="50dip"
				android:width="200dip" android:layout_marginLeft="0dip">
			</EditText>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:id="@+id/showmsg_textview02" 
				android:text=" 한국어 :"
				android:textColor="#000000"
				>
			</TextView>
			<EditText android:text="" android:id="@+id/plusaddword_edittext02"
				android:layout_width="wrap_content" android:layout_height="50dip"
				android:width="200dip" android:layout_marginLeft="0dip">
			</EditText>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:id="@+id/showmsg_textview03" 
				android:text=" 예    제 :"
				android:textColor="#000000"
				>
			</TextView>
			<EditText android:text="" android:id="@+id/plusaddword_edittext03"
				android:layout_width="wrap_content" android:layout_height="50dip"
				android:width="200dip" android:layout_marginLeft="0dip">
			</EditText>
		</LinearLayout>

    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="46dip"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/plusaddword_imageview01"
            android:layout_width="130dip"
            android:layout_height="46dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:background="@drawable/plusaddword_submit" />


    </LinearLayout>

</LinearLayout>