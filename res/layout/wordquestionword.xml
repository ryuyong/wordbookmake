<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
	>

	<TextView
	    android:id="@+id/wordquestionword_textview01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:background="#ff0000"
	    android:textAlignment="center"
	    android:textColor="#ffff00"
	    android:textSize="30dip" >
	</TextView>
	<RadioGroup 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:id="@+id/wordquestionword_radiogroup01"
		android:background="@drawable/radioback"
		android:paddingLeft="10dp"
	    android:paddingRight="10dp"
		>

		<RadioButton
		    android:id="@+id/wordquestionword_radiobutton00"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#ff0000" >
		</RadioButton>
		<RadioButton android:id="@+id/wordquestionword_radiobutton01"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#ff0000"
		></RadioButton>

		<RadioButton 
		    android:id="@+id/wordquestionword_radiobutton02"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#ff0000"
		></RadioButton>
		<RadioButton 
		    android:id="@+id/wordquestionword_radiobutton03"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#ff0000"
			></RadioButton>
	</RadioGroup>

	
	<TextView android:id="@+id/wordquestionword_textview02"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" android:textSize="100dip"
		android:textColor="#ff0000"
		></TextView>
	
	<LinearLayout 
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
		<ImageButton
		    android:id="@+id/wordquestionword_button01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#000000"
		    android:src="@drawable/back" >
		</ImageButton>
		<ImageButton 
		    android:id="@+id/wordquestionword_button02" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:src="@drawable/next"
			android:background="#000000"
			android:layout_marginLeft="10dip"></ImageButton>
		<!-- Button android:id="@+id/wordquestionword_button01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="이전" android:layout_gravity="center"></Button>
		<Button android:id="@+id/wordquestionword_button02"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" android:text="다음"></Button-->
	</LinearLayout>

    <SeekBar android:id="@+id/wordquestionword_seek01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView android:id="@+id/wordquestionword_textview03" 
	    android:background="#ff0000"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:gravity="center" 
		android:textColor="#ffff00"
		android:textSize="20dip"
		android:textAlignment="center"
		></TextView>

</LinearLayout>
